{
  "name": "enterprise-application-architecture-patterns",
  "version": "1.0.0",
  "description": "企业应用架构模式完整案例 - 在线商城系统",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:create": "ts-node src/infrastructure/database/create-database.ts",
    "db:migrate": "typeorm migration:run -d src/infrastructure/database/data-source.ts",
    "db:seed": "ts-node src/infrastructure/database/seed.ts",
    "db:reset": "npm run db:drop && npm run db:setup",
    "db:drop": "ts-node src/infrastructure/database/drop-database.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "enterprise-architecture",
    "design-patterns",
    "domain-model",
    "data-mapper",
    "unit-of-work",
    "mvc",
    "typescript",
    "nodejs"
  ],
  "author": "Enterprise Architecture Guide",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.3",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.7",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enterprise-architecture/patterns-guide.git"
  },
  "bugs": {
    "url": "https://github.com/enterprise-architecture/patterns-guide/issues"
  },
  "homepage": "https://github.com/enterprise-architecture/patterns-guide#readme"
}
